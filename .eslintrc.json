{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "plugin:solid/typescript",
    "plugin:prettier/recommended",
    "prettier",
    "ollynm"
  ],
  "ignorePatterns": ["*.d.ts"],

  "parserOptions": {
    "project": "tsconfig.json",
    "tsconfigRootDir": ".",
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["solid"],
  "overrides": [],
  "rules": {}
}
