{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@base/*": ["./*"],
      "@components/*": ["components/*"],
      "@common/*": ["components/common/*"],
      "@contexts/*": ["contexts/*"],
      "@state/*": ["state/*"],
      "@theme/*": ["theme/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "types": ["vite/client"],
    "noEmit": true,
    "isolatedModules": true
  }
}
